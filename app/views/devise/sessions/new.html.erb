

<body style="background-image: url(https://images.pexels.com/photos/1242348/pexels-photo-1242348.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260); background-size: 100%">
<div class="container" style="max-width: 500px;">
  <div class="row">
    <div class="col-md-12">
      <br><br><br>
       <h2 class="h3 mb-3 font-weight-normal text-center">Connexion</h2>
    
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :email, "Email" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password, "Mot de passe" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>

      <% if devise_mapping.rememberable? %>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "Rester connectÃ©" %>
          </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Se connecter", class: "btn btn-lg btn-primary btn-block" %>
      </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
</body>
