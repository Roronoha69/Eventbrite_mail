<% if flash.any? %> 
  <% flash.each do |type, msg| %> 
    <div class="alert alert-<%= type %>"> 
    <%= msg %> 
    </div> 
  <% end %> 
<% end %>



<div class="container rounded bg-white mt-5 mb-5">
    <div class="row">
        <div class="col-md-3 border-right">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img class="rounded-circle mt-5" width="150px" src="https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg"><p class="font-weight-bold"></p><span class="text-black-50"><%= current_user.email %></span><span> </span></div>
        </div>
        <div class="col-md-5 border-right">
        <!--# Reprenez le form que vous avez fait pour la création d'un evenement, adaptez vos champs
        # en action vous mettez update
        # dans votre methode update vous récupérez l'utilisateur courant et vous le modifiez en base
        # ya juste a faire un truc genre current_user.first_name = [ SON NOUVEAU PRENOM ] etc... et current_user.save </!-->
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right">Mettre à jour ton profil</h4>
                </div>
                <%= form_for(current_user) do |f| %>
                  <div class="row mt-2">
                    <div class="col-md-6"><label class="labels">Nom</label><input type="text" class="form-control" <%= f.text_field :last_name, class: 'form-control' %></div>

                    <div class="col-md-6"><label class="labels">Prénom</label><input type="text" class="form-control" <%= f.text_field :first_name, class: 'form-control' %></div>
                  </div>
                

                  <div class="row mt-3">
                   <div class="col-md-12" style="margin-top: 25px"><label class="labels">Description</label><%= f.text_field :description, class: 'form-control' %></div>
                  </div>
                   <br><br>
                  <div class="actions">
                    <%= f.submit "Mettre à Jour" %>
                </div> 
                  
                
                <% end %>       
            </div>
        </div>
    </div>
</div>

